<div id="<%= dom_id airport %>">
  <% if action_name != "show" %>
    <%= link_to "Show this airport", airport, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this airport', edit_airport_path(airport), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
