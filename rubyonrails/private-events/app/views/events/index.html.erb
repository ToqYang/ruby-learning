<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Events</h1>
    <% if user_signed_in? %>
      <%= link_to 'New event', new_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="events" class="min-w-full">
    <div id="upcoming">
      <h2>Upcoming</h2>
      <% @events.upcoming.each do |event| %>
        <ol>
          <%= link_to event.title, event %>
        </ol>
      <% end %>
    </div>
    <div id="past">
      <h2>Past</h2>
      <% @events.past.each do |event| %>
        <ol>
          <%= link_to event.title, event %>
        </ol>
      <% end %>
    </div>
  </div>
</div>
