<%= form_with model: @post do |f| %>
  <div class="relative grid grid-cols-1 gap-4 p-4 mb-8 border rounded-lg bg-white shadow-lg">
    <div class="relative flex gap-4">
        <div class="flex flex-col w-full">
            <div class="w-full md:w-full mb-2 mt-2">
              <%= f.text_area :body,
                required: true,
                autofocus: true,
                class: "bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full h-20 py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white",
                placeholder: 'What are you thinking?'
              %>
           </div>
          <%= f.button new_user_session_path, class: "mt-5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-3 md:mr-0 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
            Publish
          <% end %>
        </div>
    </div>
  </div>
<% end %>